<Page x:Class="Task1.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Background="{StaticResource PageBackground}"
      Title="Home">

    <StackPanel MinWidth="300" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Button Content="Авторизация" Click="SignInButton_OnClick" />
        <Button Content="Регистрация" Click="SignUpButton_OnClick" />
        <Button Content="Настройки" />
    </StackPanel>
</Page>