<Window x:Class="Task4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid Width="300" Height="120">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="3*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"></RowDefinition>
                <RowDefinition Height="40"></RowDefinition>
                <RowDefinition Height="40"></RowDefinition>
            </Grid.RowDefinitions>

            <Label Grid.Row="0" Content="Login"></Label>
            <Label Grid.Row="1" Content="Password"></Label>

            <TextBox x:Name="loginTextBox" Grid.Row="0" Grid.Column="1"></TextBox>
            <TextBox x:Name="passwordTextBox" Grid.Row="1" Grid.Column="1"></TextBox>

            <Button x:Name="registrationButton" Content="Registration" Grid.Row="2" Grid.ColumnSpan="2"  Click="RegistrationButton_Click"></Button>
        </Grid>
    </Grid>
</Window>
