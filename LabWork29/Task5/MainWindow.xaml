<Window x:Class="Task5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task5"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <WrapPanel DockPanel.Dock="Top">
            <Button Content="Производители" MinWidth="200"></Button>
            <Button Content="Товары" MinWidth="200"></Button>
            <Button Content="Заказчики" MinWidth="200"></Button>
            <Button Content="Заказы" MinWidth="200"></Button>
        </WrapPanel>
        
        <Label Content="Подвал" Background="Gainsboro" DockPanel.Dock="Bottom"></Label>
        <Label Content="Меню" Background="Beige" DockPanel.Dock="Left"></Label>
        <Label Content="Контент" Background="CadetBlue"></Label>
    </DockPanel>
</Window>
