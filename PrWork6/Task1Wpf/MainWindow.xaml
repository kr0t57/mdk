<Window x:Class="Task1Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task1Wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="120" Width="600" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Button Grid.Row="0" Content="Customers" Click="OpenCustomersButton_Click"/>
        <Button Grid.Row="1" Content="Books" Click="OpenBooksButton_Click"/>
        <Button Grid.Row="2" Content="AddBook" Click="AddBook_Click"/>
    </Grid>
</Window>
