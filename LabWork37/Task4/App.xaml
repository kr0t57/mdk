<Application x:Class="Task4.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Task4"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="MyFontStyle" TargetType="Control">
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontFamily" Value="Resources/Fonts/RubikMoonrocks-Regular.ttf #Rubik Moonrocks" />
        </Style>

        <Style TargetType="Label" BasedOn="{StaticResource MyFontStyle}">
            <Setter Property="Foreground" Value="MediumPurple" />
        </Style>

        <Style TargetType="TextBox" BasedOn="{StaticResource MyFontStyle}">
            <Setter Property="MaxLength" Value="30" />
        </Style>

        <Style TargetType="Button" BasedOn="{StaticResource MyFontStyle}">
            <Setter Property="Height" Value="40" />
            <Setter Property="Width" Value="300" />
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="Background" Value="Purple" />
            <Setter Property="Margin" Value="0 5 5 5" />
        </Style>
        
        <Style x:Key="CancelButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="Red" />
        </Style>
    </Application.Resources>
</Application>
